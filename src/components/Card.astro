---
export interface Props {
  body: string;
  media?: string;
  time: Date;
}

const { body, media, time } = Astro.props;
---

<div class="bg-blog-400 py-4">
  <div class="py-2"></div>
  <div class="test-center bg-slate-400">
    <div class="text-white text-lg font-bold pl-8">{body}</div>
  </div>
  <div class="py-2"></div>
  <div class="test-center">
    <div class="text-white text-sm font-bold pl-8">
      {time.toLocaleDateString()}
    </div>
    <hr class="border-t-2 border-black mx-4" />
  </div>
</div>
